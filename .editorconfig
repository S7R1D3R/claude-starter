# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Universal settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python
[*.py]
indent_size = 4
max_line_length = 88

# Rust
[*.rs]
indent_size = 4
max_line_length = 100

# Go
[*.go]
indent_style = tab
indent_size = 4

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Makefiles
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Config files
[*.{toml,ini,cfg}]
indent_size = 2

# HTML/CSS
[*.{html,css,scss}]
indent_size = 2
max_line_length = 120

# XML
[*.xml]
indent_size = 2
